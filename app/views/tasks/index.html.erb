  <h2>All tasks :</h2>
  <ul>
    <% @tasks.each do |task| %>
      <li><%= link_to(task.name, task_path(task)) %> <%= task.done ? [X] : [] %> <%= link_to("edit", edit_task_path(task)) %>  <%= link_to("delete", task_path(task), method: :delete ) %></li>
    <% end %>
  </ul>

  <p><%= link_to("Add new task", new_task_path) %></p>